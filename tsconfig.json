{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "rootDir": "src",
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "noImplicitUseStrict": true
    },
    "exclude": [
        "node_modules"
    ]
}